@using QLBanHangLuuNiem.Models;
@model List<Giohang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2 style="text-align:center">THÔNG TIN GIỎ HÀNG</h2>
<table align="center" border="1">
    <tr style="text-align:center; font-weight:bold">
        <td>Mã hàng</td>
        <td>Tên hàng</td>
        <td>Ảnh bìa</td>
        <td>Số lượng</td>
        <td>Đơn giá</td>
        <td>Thành tiền</td>
        <td width="50px"></td>
        <td width="50px"></td>
        <td width="50px"></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center; font-weight:bold">
            <td> @item.iMaSP</td>
            <td> @item.sTenSP</td>
            @using (Html.BeginForm("Capnhatgiohang", "Giohang", new { @iMaSp = item.iMaSP }))
            {
                <td>
                    <input type="number" min="1" name="txtSoluong" value="@item.iSoLuong" style="background-color:yellow">
                </td>
                <td>@string.Format("{0:0,0}", item.iDonGia)</td>
                <td>@string.Format("{0:0,0}", item.dThanhTien)</td>
                <td> <a href="@Url.Action("Details", "SPClient", new { id = item.iMaSP })"> Chi Tiết </a></td>
                <td> @Html.ActionLink("Xóa", "XoaGioHang", new { @iMaSp = item.iMaSP })</td>
                <td> <input type="submit" value="Cập nhật"</td>
            }
        </tr>
    }
    <tr style="font-weight:bold; text-align:right; color:red">
        <td colspan="3">Số lượng hàng: @ViewBag.Tongsoluong</td>
        <td colspan="3">Tổng tiền: @String.Format("{0:0,0}", ViewBag.Tongtien)VNĐ</td>
    </tr>
    <tr style="font-weight:bold; color:blue; text-align:right">
        <td colspan="9">
            @Html.ActionLink("Xóa Giỏ Hàng", "XoaTatCaGioHang")
        </td>
    </tr>



    <tr style="font-weight:bold; color:blue; text-align:right">
        <td colspan="6">
            @Html.ActionLink("TRỞ LẠI GIỎ HÀNG", "GioHangSP", "GioHangSP")
        </td>
    </tr>
    <tr>
        <td colspan="6" style="text-align:right;color:blue">
            @using (Html.BeginForm("DatHang", "GioHang"))
            {
                <input type="submit" value="Đặt hàng" />
            }
        </td>
    </tr>
</table>


